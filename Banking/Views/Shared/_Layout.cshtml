<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Banking.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Логотип</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.bsuir.by/">О нас</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Услуги
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Открыть счёт</a></li>
                                <li><a class="dropdown-item" href="#">Оформить кредит</a></li>
                                <li><a class="dropdown-item" href="#">Провести транзакцию</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Контакты</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer class="footer bg-light mt-auto py-3">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p>&copy; 2023 Ваш сайт. Все права защищены.</p>
                </div>
                <div class="col text-right">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#">Главная</a></li>
                        <li class="list-inline-item"><a href="#">О нас</a></li>
                        <li class="list-inline-item"><a href="#">Услуги</a></li>
                        <li class="list-inline-item"><a href="#">Контакты</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
